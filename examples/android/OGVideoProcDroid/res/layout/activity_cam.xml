<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btn_show_input"
            style="?android:attr/buttonStyleSmall"
            android:onClick="topBtnClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show input" />

        <Button
            android:id="@+id/btn_show_output"
            style="?android:attr/buttonStyleSmall"
            android:onClick="topBtnClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show output" />
    </LinearLayout>

    <view class="ogles_gpgpu.examples.ogvideoprocdroid.HistView"
        android:id="@+id/hist_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
